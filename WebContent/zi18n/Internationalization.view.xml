<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zi18n.Internationalization" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	        	<Table id="idProductsTable" items="{/}">
		<columns>
			<Column
				width="12em">
				<Text text="{m2>name}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{m2>role}" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="{m2>dept}" />
			</Column>
			
		</columns>
		<items>
			<ColumnListItem>
				<cells>
						<Text
						text="{name}" />
						<Text
						text="{role}" />
						<Text
						text="{dept}" />
				
				</cells>
			</ColumnListItem>
		</items>
	</Table>
		</content>
	</Page>
</core:View>